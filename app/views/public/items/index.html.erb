<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/search', genres: @genres%>
    </div>

    <div class="col-md-9">
      <div class="row mx-auto">
        <h3>新着商品</h3>
        <p>（全<%= @all_items.count %>件）</p>
      </div>

      <div class="row">
      <% @items.each do |item| %>
        <div class="col-sm-3">
          <%= link_to items_show_path do %>
            <%= attachment_image_tag item, :image, format: 'jpg', size: "50×50" %></br>
            <%= item.name %></br>
            ￥<%= item.price %>
          <% end %>
        </div>
      <% end %>
      </div>

      <div>
      <%= paginate @items %>
      </div>
    </div>
  </div>
</div>