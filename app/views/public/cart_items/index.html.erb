<div class="container">
  <div class="row">
    <div class="col-md-auto mb-3" style="background-color: #DDDDDD;">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col mb-3 text-right">
      <%= link_to "カートを空にする", destroy_all_path, method: :DELETE , class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-11">
      <table class="table">
        <thead style="background-color: #DDDDDD;">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </th>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, format: 'jpg', size: "50x50" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model:@cart_item, url:cart_item_path(cart_item.id), method: :PATCH, local: true do |f| %>
                  <%= f.select :amount, *[1..10], {selected: cart_item.amount} %>
                  <%= f.submit "変更", class: "btn btn-success" %>
                <% end %>
              </td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :DELETE , class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div>
      <%= link_to "買い物を続ける",root_path, class: "btn btn-primary" %>
    </div>
    <div>
      <table class="table">
        <tbody>
          <th>合計金額</th>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tbody>
      </table>
    </div>
  </div>
  </br>
  <div class="row">
    <div class="mx-auto">
      <%= link_to "情報入力に進む",new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
