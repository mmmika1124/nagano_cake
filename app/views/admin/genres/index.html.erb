<div class="container">
  <div class="row">
    <div class="col-md-11">
      <h2>ジャンル一覧・追加</h2>
      <%= form_with model:@genre, url:admin_items, method: :post, local: true do |f| %>
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


