<div class="container">
  <div class="row">
    <div class="col-md-11">
      <h2>ジャンル編集</h2>
      <%= form_with model:@genre, url:admin_genre_path, method: :PATCH, local: true do |f| %>
        <div class="form-group">
          <label for="genre_name">ジャンル名</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>

