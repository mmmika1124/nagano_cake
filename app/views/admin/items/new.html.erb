<div class="container">
  <div class="row">
    <div class="col-md-11">
      <h2>商品新規登録</h2>
      <%= form_with model:@item, url:admin_items_path, method: :POST, local: true do |f| %>
        <div class="form-group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label for="item_introduction">商品説明</label>
          <%= f.text_field :introduction %>
        </div>
        <div class="form-group">
          <label for="item_price">税抜価格</label>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <%= f.submit '新規登録', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>