<div class="container">
  <div class="row">
    <div class="col-md-11">
      <h2>商品詳細</h2>
      <%= attachment_image_tag @item, :image, format: 'jpg', size: "200x200" %>

      <ul>
        <div>商品名</div>
        <div><%= @item.name %></div>
      </ul>

      <ul>
        <div>商品説明</div>
        <div><%= @item.introduction %></div>
      </ul>

      <ul>
        <div>ジャンル</div>
        <div><%= @item.genre.name %></div>
      </ul>

      <ul>
        <div>税込価格（税抜価格）</div>
        <div><%= @item.price %>円　　<%= (@item.price * 1.1) .to_i %>円</div>
      </ul>

      <ul>
        <div>販売ステータス</div>
        <div>
          <% if @item.is_active == true %>
            <div class="text-success">
              販売中
            </div>
          <% else %>
            <div class="text-muted">
              販売停止中
            </div>
          <% end %>
        </div>
      </ul>

      <ul>
        <div>
          <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
        </div>
      </ul>
    </div>
  </div>
</div>