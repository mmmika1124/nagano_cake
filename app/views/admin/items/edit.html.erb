<div class="container">
  <div class="row">
    <div class="col-md-11">
      <h2>編集</h2>
      <%= form_with model:@item, url:admin_item_path, method: :PATCH, local: true do |f| %>
         <div class="form-group">
          <label for="item_image">商品画像</label>
          <%= f.attachment_field :image %>
        </div>
        <div class="form-group">
          <label for="item_name">商品名</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label for="item_introduction">商品説明</label>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <label for="item_genre_id">ジャンル</label>
          <%= f.collection_select(:genre_id, @genres, :id, :name, {include_blank: '--選択してください--'}) %>
        </div>
        <div class="form-group">
          <label for="item_price">税抜価格</label>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
          <label for="item_price">販売ステータス</label>
          <span><%= f.radio_button :is_active, "true" %>販売中</span>
          <span><%= f.radio_button :is_active, "false" %>販売停止中</span>
        <div class="form-group">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>