<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-auto mb-3 bg-light">
      <h3>注文履歴詳細</h3>
    </div>
    <div class="col-md-8">
    </div>
  </div>

  <div class="row">
    <table class="table table-borderless table-sm col-4">
      <tr>
        <th class="col-sm-2">会員ID</th>
        <td class="col-sm-3" ><%= @order.customer.id %></td>
      </tr>
      <tr>
        <th class="col-sm-2">注文日</th>
        <td class="col-sm-3" ><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th class="col-sm-2">配送先</th>
        <td class="col-sm-3" >
          〒<%= @order.postal_code %>
          　<%= @order.address %>
        </td>
      </tr>
      <tr>
        <th class="col-sm-2"></th>
        <td class="col-sm-3" >
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th class="col-sm-2">支払方法</th>
        <td class="col-sm-3" >
          <%= @order.payment_method_i18n %>
        </td>
      </tr>
      <tr>
        <th class="col-sm-2">注文ステータス</th>
        <td class="col-sm-3" >
          <%= @order.status_i18n %>
        </td>
      </tr>

    </table>
  </div>
  </br>